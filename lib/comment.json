{
    "multiline": {
        "prefix": {
            "js": "/*\n",
            "html": "<!--\n",
            "htm": "<!--\n",
            "rb": "=begin\n",
            "coffee": "###\n",
            "cs": "//",
            "class": "/*",
            "md": "<!--\n"
        },

        "suffix": {
            "js": "*/\n",
            "html": "-->\n",
            "htm": "-->\n",
            "rb": "=end\n",
            "coffee": "###",
            "cs": "*/\n",
            "class": "*/",
            "md": "-->\n"
        }

    },

    "singleline": {
        "prefix": {
            "js": "//",
            "html": "<!-- ",
            "htm": "<!-- ",
            "rb": "#",
            "coffee": "#",
            "cs": "//",
            "class": "//",
            "md": "<!-- "
        },

        "suffix": {
            "js": "",
            "html": " -->",
            "htm": " -->",
            "rb": "",
            "coffee": "",
            "cs": "",
            "class": "",
            "md": " -->"
        }
    },

    "inline": {
        "js": "/**/",
        "html": "<!---->",
        "htm": "<!---->",
        "md": "<!---->"
    }
}
